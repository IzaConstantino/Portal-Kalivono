extends layout

// Page Content

block content
  .row
    .col-md-9                  
      if (termosCarousel != null)
        .row.carousel-holder
          .col-md-12
            #carousel-example-generic.carousel.slide(data-ride='carousel')
              - var i = -1
              ol.carousel-indicators
                for termo in termosCarousel
                  -i++
                  if i == 0 
                    li.active(data-target='#carousel-example-generic', data-slide-to=i)
                  else 
                    li(data-target='#carousel-example-generic', data-slide-to=i)

              .carousel-inner
                -var i = -1 
                for termo in termosCarousel
                  -i++
                  if i == 0
                    .item.active
                      img.slide-image(src='#{termo.multimidia[0].url}', alt='')
                      h3.text-center=termo.emTerena
                  else 
                    .item
                      img.slide-image(src='#{termo.multimidia[0].url}', alt='')
                      h3.text-center=termo.emTerena

              a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left
              a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
                span.glyphicon.glyphicon-chevron-right
  .row
    include categorias